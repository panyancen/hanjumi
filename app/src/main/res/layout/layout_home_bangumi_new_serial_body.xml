<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/card_view_background"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">


            <ImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bangumi_recommend_image_big_height"
                android:scaleType="center" />

            <TextView
                android:id="@+id/item_play"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_shadow_height"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/default_general_margin"
                android:background="@drawable/shadow_normal_reserve"
                android:gravity="center_vertical|bottom"
                android:padding="@dimen/default_tiny_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/default_tiny_text_size" />

        </FrameLayout>
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/default_tiny_padding"
            android:textColor="@color/font_normal"
            android:textSize="13sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

