<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView android:id="@+id/dongtai_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:layout_gravity="center_horizontal"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="7dp">>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/dongtai_item_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/default_tiny_padding"
        android:scaleType="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dongtai_item_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:maxLines="2"
                android:textColor="@color/font_normal"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/dongtai_item_review"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:textColor="@color/black_alpha_45"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dongtai_item_data"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:maxLines="1"
                android:textColor="@color/font_normal"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>